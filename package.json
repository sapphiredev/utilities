{
	"name": "root-utilities",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf \"packages/**/dist\" \"packages/**/build\" \"packages/**/node_modules/.cache\"",
		"clean:full": "node scripts/clean-full.mjs",
		"lint": "eslint packages --ext mjs,js,ts,tsx --fix",
		"format": "prettier --write packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "yarn build:1 && yarn build:2 && yarn build:3 && yarn build:4",
		"build:1": "lerna run build --parallel --scope=@sapphire/utilities --scope=@sapphire/eslint-config --scope=@sapphire/prettier-config",
		"build:2": "lerna run build --parallel --scope=@sapphire/discord-utilities --scope=@sapphire/time-utilities",
		"build:3": "lerna run build --parallel --scope=@sapphire/discord.js-utilities",
		"build:4": "lerna run build --parallel --ignore=@sapphire/utilities --ignore=@sapphire/eslint-config --ignore=@sapphire/prettier-config --ignore=@sapphire/discord-utilities --ignore=@sapphire/time-utilities --ignore=@sapphire/discord.js-utilities",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest",
		"prepare": "husky install .github/husky"
	},
	"devDependencies": {
		"@commitlint/cli": "^13.2.1",
		"@commitlint/config-conventional": "^13.2.0",
		"@discordjs/collection": "^0.2.1",
		"@favware/npm-deprecate": "^1.0.4",
		"@favware/rollup-type-bundler": "^1.0.5",
		"@rollup/plugin-commonjs": "^21.0.0",
		"@rollup/plugin-node-resolve": "^13.0.5",
		"@sapphire/framework": "^2.1.0",
		"@types/fs-extra": "^9.0.13",
		"@types/jest": "^27.0.2",
		"@types/lodash": "^4.14.175",
		"@types/node": "^16.11.1",
		"@types/ws": "^8.2.0",
		"@typescript-eslint/eslint-plugin": "^5.0.0",
		"@typescript-eslint/parser": "^5.0.0",
		"cz-conventional-changelog": "^3.3.0",
		"discord-api-types": "0.23.1",
		"discord.js": "^13.2.0",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^4.0.0",
		"fs-extra": "^10.0.0",
		"gen-esm-wrapper": "^1.1.3",
		"husky": "^7.0.2",
		"jest": "^27.2.5",
		"jest-circus": "^27.2.5",
		"jest-extended": "^1.0.0",
		"lerna": "^4.0.0",
		"lint-staged": "^11.2.3",
		"lodash": "^4.17.21",
		"nock": "^13.1.3",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.58.0",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-typescript2": "^0.30.0",
		"ts-jest": "^27.0.7",
		"ts-node": "^10.3.0",
		"tslib": "^2.3.1",
		"typedoc": "^0.22.5",
		"typescript": "^4.4.4"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphiredev/utilities.git"
	},
	"engines": {
		"node": ">=v14.0.0",
		"npm": ">=7.0.0"
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^8.5.0",
		"minimist": "^1.2.5",
		"kind-of": "^6.0.3",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.1.1.tgz",
		"dot-prop": "^6.0.1",
		"lodash": "^4.17.21",
		"marked": "^3.0.7",
		"merge": "^2.1.1",
		"set-value": "^4.1.0",
		"tar": "^6.1.11",
		"trim": "^1.0.1",
		"trim-newlines": "^4.0.2"
	},
	"packageManager": "yarn@3.0.2"
}
