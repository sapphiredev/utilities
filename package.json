{
	"name": "root",
	"private": true,
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"clean": "rimraf packages/**/dist",
		"lint": "eslint packages --ext js,ts --fix",
		"format": "prettier --write packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}",
		"format:check": "prettier --check packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}",
		"test": "jest",
		"test:watch": "jest --watch",
		"build": "lerna run build --parallel",
		"docs": "typedoc",
		"commit": "git-cz",
		"cz": "git-cz",
		"update": "yarn upgrade-interactive --latest"
	},
	"dependencies": {},
	"devDependencies": {
		"@commitlint/cli": "^9.1.2",
		"@commitlint/config-conventional": "^9.1.2",
		"@types/fs-extra": "^9.0.1",
		"@types/jest": "^26.0.10",
		"@types/node": "^14.6.1",
		"@typescript-eslint/eslint-plugin": "^3.10.1",
		"@typescript-eslint/parser": "^3.10.1",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^7.7.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-prettier": "^3.1.4",
		"fs-extra": "^9.0.1",
		"husky": "^4.2.5",
		"jest": "^26.4.2",
		"jest-circus": "^26.4.2",
		"lint-staged": "^10.2.13",
		"prettier": "^2.1.1",
		"rollup": "^2.26.6",
		"rollup-plugin-cleaner": "^1.0.0",
		"rollup-plugin-terser": "^7.0.0",
		"rollup-plugin-typescript2": "^0.27.2",
		"standard-version": "^9.0.0",
		"ts-jest": "^26.3.0",
		"ts-node": "^9.0.0",
		"typedoc": "^0.18.0",
		"typedoc-plugin-lerna-packages": "^0.3.1",
		"typescript": "^4.0.2"
	},
	"peerDependencies": {},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/sapphire-project/utilities.git"
	},
	"engines": {
		"node": ">=12"
	},
	"husky": {
		"hooks": {
			"commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
			"pre-commit": "yarn lint-staged"
		}
	},
	"commitlint": {
		"extends": [
			"@commitlint/config-conventional"
		]
	},
	"lint-staged": {
		"*.ts": [
			"prettier --write",
			"eslint --fix --ext ts"
		]
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"resolutions": {
		"acorn": "^7.3.1",
		"minimist": "^1.2.2",
		"kind-of": "^6.0.3",
		"jest-environment-jsdom": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz",
		"jest-jasmine2": "https://registry.yarnpkg.com/@favware/skip-dependency/-/skip-dependency-1.0.2.tgz",
		"dot-prop": "^5.2.0"
	}
}
